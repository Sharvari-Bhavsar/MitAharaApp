<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:background="@drawable/lavenderpapertexture">




    <TextView
        android:id="@+id/RegistrationPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration page"
        android:textSize="35sp"
        android:textColor="@color/lavender7"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"/>


    <EditText
        android:id="@+id/editTextRegistrationPersonName"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Orchid"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textCursorDrawable="@color/lavender7"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editRTextPhone"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Orchid"
        android:drawableLeft="@android:drawable/stat_sys_phone_call"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Phone_no"
        android:inputType="phone"
        android:textCursorDrawable="@color/lavender7"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextRTextEmailAddress"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:textCursorDrawable="@color/lavender7"
        android:backgroundTint="@color/Orchid"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/editTextRegistrationPersonDOB"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Orchid"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="DOB"
        android:inputType="textPersonName"
        android:textCursorDrawable="@color/lavender7"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextRegistrationUsername"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:textCursorDrawable="@color/lavender7"
        android:backgroundTint="@color/Orchid"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"

        />

    <EditText
        android:id="@+id/editTextRegistrationPassword"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Orchid"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/lavender7"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Orchid"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="ConfirmPassword"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/lavender7"
        android:textSize="20dp" />

    <Button
        android:id="@+id/register1button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple_200"
        android:text="register"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="20dp"/>


</LinearLayout>