<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NUtrition12Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.003"
            tools:layout_editor_absoluteX="10dp" >

            <ImageButton
                android:id="@+id/imageButton41"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/purple3"
                android:src="@drawable/baseline_arrow_back_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="3dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:background="@color/title"
                            android:gravity="center"

                            android:text="@string/age"
                            android:textColor="@color/white"                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="183dp"
                            android:layout_height="70dp"
                            android:background="@color/title"
                            android:gravity="center"

                            android:text="@string/amount_of_milk"
                            android:textColor="@color/white"                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="154dp"
                            android:layout_height="70dp"
                            android:background="@color/title"
                            android:gravity="center"

                            android:text="@string/frequency"
                            android:textColor="@color/white"                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="70dp"
                            android:background="@color/title"
                            android:gravity="center"
                            android:text="@string/solid_food"
                            android:textColor="@color/white"                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView

                            android:layout_height="100dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="Up to 2 weeks"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="Up to 2 weeks	15-20ml in the first days, then around 60 – 80ml	Once every 3 hours	No"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="100dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="Once every 3 hours"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="100dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="NO"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row2"
                            android:gravity="center"
                            android:text="2 weeks to 2 months"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row2"
                            android:gravity="center"
                            android:text="60ml to 120 ml"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row2"
                            android:gravity="center"
                            android:text="8  to 12 times daily"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row2"
                            android:gravity="center"
                            android:text="NO"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="2 – 4 Months"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="120ml to 180ml"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="120ml to 180ml"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"
                            android:background="@color/row1"
                            android:gravity="center"
                            android:text="NO"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:background="@color/row2">

                        <TextView
                            android:layout_height="250dp"

                            android:background="@color/row2"
                            android:text="4 - 6 months"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="70dp"

                            android:text="120ml to 240ml"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="match_parent"

                            android:background="@color/row2"
                            android:text="5  to 6 times day"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"

                            android:background="@color/row2"
                            android:text="Possibly if your baby can hol their head up and is at least 5kgs.But you do not need to introduce solid foods yet"

                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_height="250dp"

                            android:background="@color/row1"
                            android:text="6-12 months"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="250dp"

                            android:background="@color/row1"
                            android:text="240ml"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_height="250dp"

                            android:background="@color/row1"
                            android:text="3 to 4 times day"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="120dp"

                            android:layout_height="250dp"
                            android:background="@color/row1"
                            android:text="Yes. Start with soft foods, like one-grain cereals and pureed vegetables, meats, and fruits, progressing to mashed and well-chopped finger foods. Give your "

                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </TableRow>


                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>